<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBlack"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_140">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/recom_Image"
            android:background="@color/colorSBlack"
            android:layout_gravity="center"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_120"
            fresco:fadeDuration="3000"
            fresco:roundAsCircle="true"/>
        <RelativeLayout
            android:background="@color/colorSBlack"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120">
            <TextView
                android:textColor="@color/colorWrite"
                android:id="@+id/text_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                />
            <TextView
                android:layout_above="@id/text_zy"
                android:textColor="@color/colorWrite"
                android:id="@+id/text_dy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:maxEms="10"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_above="@id/text_pf"
                android:textColor="@color/colorWrite"
                android:id="@+id/text_zy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_alignParentBottom="true"
                android:textColor="@color/colorWrite"
                android:id="@+id/text_pf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <Button
                android:text="购票"
                android:textSize="@dimen/dp_20"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/yuanj"
                android:textColor="@color/colorWrite"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_40"/>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
